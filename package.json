{
  "name": "mon-vieux-grimoire-api",
  "version": "1.0.0",
  "main": "src/server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/src/server.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prisma:generate:dev": "dotenv -e .env.development -- pnpx prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.development -- pnpx prisma migrate dev",
    "prisma:push:dev": "dotenv -e .env.development -- pnpx prisma db push",
    "prisma:seed:dev": "dotenv -e .env.development -- pnpx prisma db seed",
    "prisma:reset:dev": "dotenv -e .env.development -- pnpx prisma migrate reset --skip-seed",
    "prisma:studio:dev": "dotenv -e .env.development -- pnpx prisma studio --browser none",
    "prisma:db:pull:dev": "dotenv -e .env.development -- pnpx prisma db pull",
    "prisma:update:dev": "pnpm run prisma:generate:dev && pnpm run prisma:push && pnpm run prisma:studio:dev",
    "prisma:generate:prod": "dotenv -e .env.production -- pnpx prisma generate",
    "prisma:migrate:prod": "dotenv -e .env.production -- pnpx prisma migrate deploy",
    "prisma:push:prod": "dotenv -e .env.production -- pnpx prisma db push",
    "prisma:seed:prod": "dotenv -e .env.production -- pnpx prisma db seed",
    "prisma:studio:prod": "dotenv -e .env.production -- pnpx prisma studio --browser none",
    "prisma:db:pull:prod": "dotenv -e .env.production -- pnpx prisma db pull"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@fastify/basic-auth": "^5.1.1",
    "@fastify/compress": "^7.0.3",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/oauth2": "^7.9.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "@neondatabase/serverless": "^0.9.4",
    "@prisma/adapter-neon": "^5.18.0",
    "@prisma/client": "^5.16.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "fastify": "^4.28.0",
    "fastify-plugin": "^4.5.1",
    "fastify-zod-openapi": "^1.2.1",
    "nodemailer": "^6.9.14",
    "sharp": "^0.32.6",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8",
    "zod-openapi": "^2.19.0",
    "zod-prisma-types": "^3.1.8",
    "zod-to-json-schema": "^3.23.1",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.14.8",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-zod-openapi": "^0.2.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.3",
    "prisma": "^5.16.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2"
  }
}
