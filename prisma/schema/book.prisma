type BookRating {
    id    String @map("_id") @db.ObjectId
    grade Int

    userId String @db.ObjectId
}

model Book {
    id            String       @id @default(auto()) @map("_id") @db.ObjectId
    title         String
    author        String
    genre         String
    year          Int
    imageUrl      String
    ratings       BookRating[]
    averageRating Json

    // Each book is added by a user
    user   User   @relation(fields: [userId], references: [id])
    userId String @db.ObjectId
}
